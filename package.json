{
  "name": "@democratize-quality/mcp-server",
  "version": "1.0.0",
  "main": "mcpServer.js",
  "bin": {
    "democratize-quality-mcp": "cli.js",
    "dq-mcp-server": "cli.js"
  },
  "files": [
    "mcpServer.js",
    "run-server.js",
    "cli.js",
    "browserControl.js",
    "src/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "node test-mcp.js",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:watch": "nodemon scripts/generate-docs.js",
    "docs:clean": "rm -rf docs/",
    "start": "NODE_ENV=production node mcpServer.js",
    "mcp": "NODE_ENV=production node mcpServer.js",
    "mcp:debug": "MCP_FEATURES_ENABLEDEBUGMODE=true node mcpServer.js",
    "dev": "MCP_FEATURES_ENABLEDEBUGMODE=true node mcpServer.js",
    "server": "node run-server.js",
    "server:debug": "node run-server.js --debug",
    "server:prod": "node run-server.js --production",
    "inspector": "npx @modelcontextprotocol/inspector node mcpServer.js",
    "prepare-publish": "node prepare-publish.js",
    "prepublishOnly": "npm run prepare-publish",
    "postinstall": "echo '\nðŸŽ¯ Democratize Quality MCP Server installed successfully!\n\nQuick start:\n  npx @democratize-quality/mcp-server --help\n  npx dq-mcp-server --help\n\nDocumentation: https://github.com/democratize-quality/mcp-server#readme\n'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "browser-automation",
    "api-testing",
    "quality-assurance",
    "testing",
    "democratize-quality",
    "chrome-devtools",
    "end-to-end-testing"
  ],
  "author": "Democratize Quality Team",
  "license": "ISC",
  "description": "MCP Server for democratizing quality through browser automation and comprehensive API testing capabilities",
  "homepage": "https://github.com/democratize-quality/mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/democratize-quality/mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/democratize-quality/mcp-server/issues"
  },
  "mcp": {
    "server": {
      "command": "node",
      "args": [
        "mcpServer.js"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "chrome-launcher": "^1.2.0",
    "chrome-remote-interface": "^0.33.3",
    "express": "^5.1.0",
    "json-rpc-2.0": "^1.7.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
